{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "$": true,
    "require": true,
    "define": true,
    "baseUrl": true,
    "tinymce": true,
    "Switchery": true,
    "tinymceElfinder": true,
    "Datepicker": true,
    "Swal": true
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-console": "warn",
    "quotes": [
      "error",
      "double"
    ],
    "semi": "error",
    "indent": [
      "error",
      2
    ],
    "@typescript-eslint/no-var-requires": "off"
  }
}
